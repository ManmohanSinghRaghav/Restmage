# ====================================
# FASTAPI SERVER CONFIGURATION
# ====================================
HOST=0.0.0.0
PORT=5000
ENVIRONMENT=development
DEBUG=True

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/restmage

# MongoDB Atlas (Cloud) - Recommended for production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/restmage?retryWrites=true&w=majority

MONGODB_DATABASE=restmage
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# ====================================
# AUTHENTICATION & SECURITY
# ====================================
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ====================================
# CORS CONFIGURATION
# ====================================
# Client application URL
CLIENT_URL=http://localhost:3000

# Allowed origins (comma-separated for multiple)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Allow all origins in development (true/false)
ALLOW_ALL_ORIGINS=false

# Allowed hosts for production
ALLOWED_HOSTS=*

# ====================================
# RATE LIMITING
# ====================================
# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# FILE UPLOAD
# ====================================
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# ====================================
# AI SERVICES (OPTIONAL)
# ====================================
# Google Gemini API Key for AI floor plan generation
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# ====================================
# PYTHON ML MODEL (OPTIONAL)
# ====================================
PYTHON_EXECUTABLE=python
ML_MODEL_PATH=./model.pkl
ENCODER_PATH=./encoder.pkl

# ====================================
# LOGGING CONFIGURATION
# ====================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
