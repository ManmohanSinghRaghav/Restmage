# =============================================
# Restmage Backend Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# For Render deployment, set these in the Render dashboard

# MongoDB Configuration
# Local development:
MONGODB_URI=mongodb://localhost:27017/restmage
# Production (MongoDB Atlas - use this format for Render):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/restmage?retryWrites=true&w=majority
MONGODB_PING_DB=admin

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Generate a strong secret for production!
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
# For local development:
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# For production (update with your deployed frontend URL):
# CLIENT_URL=https://your-frontend.vercel.app
# ALLOWED_ORIGINS=https://your-frontend.vercel.app

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_MODEL=gemini-2.5-flash
GEMINI_API_KEY=your-gemini-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
