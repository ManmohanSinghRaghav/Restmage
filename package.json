{
  "name": "restmage",
  "version": "1.0.0",
  "description": "Real Estate Map Generator - Full-stack web application for real estate planning and cost estimation",
  "main": "server/server.js",
  "scripts": {
    "postinstall": "npm run install:server && npm run install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd server && npm test",
    "test:backend:manual": "node testing/backend/integration/test-summary.js",
    "test:backend:integration": "node testing/backend/integration/test-new-endpoints.js",
    "test:backend:unit": "node testing/backend/unit/test-refactored-code.js",
    "test:frontend": "cd client && npm test",
    "test:all": "npm run test:backend && npm run test:frontend && npm run test:backend:manual",
    "test:setup": "node testing/utils/checkSetup.js",
    "start": "cd server && npm start"
  },
  "keywords": [
    "real-estate",
    "map-generator",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Manmohan Singh Raghav",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
